# Puerto del servidor
PORT=3000

# Entorno (development/production)
NODE_ENV=development

# URL del frontend (para CORS en producción)
# Puedes especificar múltiples URLs separadas por comas
# Ejemplo: FRONTEND_URL=https://pdfacil.vercel.app,https://www.pdfacil.vercel.app
FRONTEND_URL=https://tu-frontend.vercel.app

# Límites de tamaño de archivo (en bytes)
MAX_FILE_SIZE=52428800

# Tiempo de vida de archivos temporales (en milisegundos)
FILE_CLEANUP_INTERVAL=300000

